<%- include('./../partials/header'); %>
<div class="container">

    <h1><%= pageTitle + " for " + product.name%></h1>
    <form action="/products/<%= product.slug %>/ratings" method="POST">
        <div class="form-group">
            <label for="rating-selection">Please Rate</label>
            <select class="form-control" id="rating-selection" name="rating">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="form-group">
            <label for="comment">Comment (Optional)</label>
            <textarea class="form-control" id="comment" rows="3" name="comment"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<%- include('./../partials/footer'); %>